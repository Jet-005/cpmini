/* components/login/index.wxss */
.login_box {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.tips_box {
  position: relative;
  background: #ffffff;
  border-radius: 10px;
  height: 250px;
  width: 250px;
  margin-bottom: 25%;
  display: flex;
  justify-content: center;
  margin-top: 15%;
}
.has_shadow {
  box-shadow: 0px 2px 6px 0px rgba(1, 32, 42, 0.1);
}
.tips_box .circle {
  position: absolute;
  width: 45%;
  height: 45%;
  border-radius: 50%;
  background-color: #ffffff;
  top: -25%;
}
.tips_box .text {
  margin-top: 35%;
  margin-left: auto;
  margin-right: auto;
}
.login_btn {
  position: absolute;
  bottom: 25px;
}
