/* manager/orderMana/index.wxss */
.order_wrapper {
  width: 100%;
  height: 200px;
  box-sizing: border-box;
  padding: 15px;
  margin-bottom: 10px;
  background-color: #fff;
  color: #101010;
  font-size: 14px;
}
.header,
.body,
.oper_area {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.body .info .goods_info{
  display: inline-flex;
  flex-direction: column;
}
.body .info .goods_name {
  font-size: 16px;
  color: #000;
}
.body .info .goods_price {
  font-size: 12px;
}
.oper_area {
  justify-content: flex-end;
}
